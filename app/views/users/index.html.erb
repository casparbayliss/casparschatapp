<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <h1>Users</h1>
        </div>
    </div>
    <div class="row">
        <ul>
            <% @users.each do |user| %>
                <li>
                    <div>
                        <%= link_to "#{user.first_name} #{user.last_name}", user %>
                        <%= link_to "Add friend", "#"%>
                        <%= link_to "Follow", "#"%>
    <%= link_to "Chat", chats_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
    <div class="row">
    </div>
</div>